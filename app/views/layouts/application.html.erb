<!DOCTYPE html>
<html>

<head>
  <title>Stay in Touch</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://kit.fontawesome.com/17f821a36f.js" crossorigin="anonymous"></script>
</head>

<body>
  <nav class="nav">
    <%= link_to 'Stay in touch', root_path, class: "nav-link"%>
    <div class="menu">
      <div class="menu-item">
        <%= menu_link_to 'Timeline', posts_path, class: "nav-link"  %>
      </div>
      <div class="menu-item">
        <%= menu_link_to 'All users', users_path, class: "nav-link" %>
      </div>
      <% if user_signed_in? %>
      <div class="menu-item-right">
        <%= image_tag("usuario.png", size: "40x40", alt: "User Placeholder", class: "menu-avatar")%>
        <%= link_to current_user.name, user_path(current_user), class: "user-name " %>
      </div>
      <% end %>
    </div>
    <% if current_user %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
    <% else %>
    <%= link_to 'Sign in', user_session_path, class: "nav-link" %>
    <% end %>
  </nav>
  <% if notice.present? %>
  <div class="notice">
    <p> <%= notice %> </p>
  </div>
  <% end %>
  <% if alert.present? %>
  <div class="alert">
    <p> <%= alert %> </p>
  </div>
  <% end %>
  <main class="main">
    <%= yield %>
  </main>
</body>

</html>