<div class="timeline-top-section">
  <section class='latest-friends-section'>
    <%= render 'latest'%>
  </section>
  <%= form_for(@post) do |form| %>
  <%= form.label :content, class: "label-no-display" %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <% if @post.errors.full_messages.any? %>
  <p class="errors">
    <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
  </p>
  <% end %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>

<article class="timeline user-section">
  <h3>
    Recent posts
  </h3>
  <ul class="posts timeline timeline-bg-color">
    <%= render @timeline_posts %>
  </ul>
</article>